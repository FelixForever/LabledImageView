<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="LabledImageView">
        <attr name="text" format="reference|string"></attr>
        <attr name="text_size" format="reference|dimension"></attr>
        <attr name="text_color" format="reference|color"></attr>
        <attr name="text_maxlength" format="reference|dimension"></attr>
        <attr name="text_singleline" format="boolean"></attr>
        <attr name="text_margin" format="reference|dimension"></attr>

        <attr name="text_padding" format="reference|dimension"></attr>
        <attr name="text_padding_left" format="reference|dimension"></attr>
        <attr name="text_padding_top" format="reference|dimension"></attr>
        <attr name="text_padding_right" format="reference|dimension"></attr>
        <attr name="text_padding_bottom" format="reference|dimension"></attr>

        <attr name="text_direction">
            <enum name="left" value="0"></enum>
            <enum name="top" value="1"></enum>
            <enum name="right" value="2"></enum>
            <enum name="bottom" value="3"></enum>
        </attr>
        <attr name="text_gravity">
            <enum name="start" value="0"/>
            <enum name="center" value="1"/>
            <enum name="end" value="2"/>
        </attr>
        <attr name="image_gravity">
            <enum name="start" value="0"/>
            <enum name="center" value="1"/>
            <enum name="end" value="2"/>
        </attr>
    </declare-styleable>

</resources>
